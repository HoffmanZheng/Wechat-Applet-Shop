<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="wxshop" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/wxshop"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- Java 实体的生成配置 -->
        <javaModelGenerator targetPackage="com.github.NervousOrange.wxshop.generated" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- xml 生成配置 -->
        <sqlMapGenerator targetPackage="db.mybatis"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 接口生成配置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.github.NervousOrange.wxshop.generated"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 具体的数据库表配置 -->
        <table schema="wxshop" tableName="tb_user" domainObjectName="User" >
            <property name="useActualColumnNames" value="false"/>
            <!-- 是否让数据库列名直接变成 Java 实体的属性, 否, snake case -> camel case -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="avatar_url" property="avatarUrl" />
            <columnOverride column="created_at" property="createdAt" />
            <columnOverride column="modified_at" property="modifiedAt" />
        </table>

        <table schema="wxshop" tableName="GOODS" domainObjectName="Goods" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="shop_id" property="shopId" />
            <columnOverride column="img_url" property="imgUrl" />
            <columnOverride column="created_at" property="createdAt" />
            <columnOverride column="modified_at" property="modifiedAt" />
        </table>

        <table schema="wxshop" tableName="ORDER" domainObjectName="Order" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="user_id" property="userId" />
            <columnOverride column="total_price" property="totalPrice" />
            <columnOverride column="express_company" property="expressCompany" />
            <columnOverride column="express_id" property="expressId" />
            <columnOverride column="created_at" property="createdAt" />
            <columnOverride column="modified_at" property="modifiedAt" />
        </table>

        <table schema="wxshop" tableName="ORDER_GOODS" domainObjectName="OrderGoods" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="goods_id" property="GoodsId" />
        </table>

        <table schema="wxshop" tableName="SHOP" domainObjectName="Shop" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="img_url" property="imgUrl" />
            <columnOverride column="owner_user_id" property="ownerUserId" />
            <columnOverride column="created_at" property="createdAt" />
            <columnOverride column="modified_at" property="modifiedAt" />
        </table>

        <table schema="wxshop" tableName="SHOPPING_CART" domainObjectName="ShoppingCart" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="id" sqlStatement="Mysql" identity="true" />
            <columnOverride column="user_id" property="userId" />
            <columnOverride column="goods_id" property="goodsId" />
            <columnOverride column="created_at" property="createdAt" />
            <columnOverride column="modified_at" property="modifiedAt" />
        </table>

    </context>
</generatorConfiguration>